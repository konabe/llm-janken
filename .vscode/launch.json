{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "LLM じゃんけん実行",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/.venv/Scripts/python.exe",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "OPENAI_API_KEY": "${env:OPENAI_API_KEY}"
      }
    },
    {
      "name": "テスト実行（全体）",
      "type": "debugpy",
      "request": "launch",
      "module": "unittest",
      "args": ["discover", "tests", "-v"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/.venv/Scripts/python.exe",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "テスト実行（現在のファイル）",
      "type": "debugpy",
      "request": "launch",
      "module": "unittest",
      "args": ["${relativeFileDirname}.${fileBasenameNoExtension}"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/.venv/Scripts/python.exe",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ]
}